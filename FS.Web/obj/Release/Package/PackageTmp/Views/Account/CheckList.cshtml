@{
    ViewBag.Title = "CheckList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model FS.Customer.CheckList
<div id="printablediv">
<div class="bs-callout bs-callout-warning" >
    <h3>Check List</h3>
    <p>The documents listed here are considered CORE documents, they are essential for the care manager to take care of a sick family member or friend (the care receivers).<br />  A secondary list of important documents to consider is located on the SageOwl dashboard, which you will have access to after initial registration.</p>
</div>
<div class="row">
    <div class="col-md-12">
        <ul class="list-group">
            <li class="list-group-item">                
              Durable Power of Attorney
            </li>
            <li class="list-group-item">              
              Healthcare Power of Attorney 
            </li>           
            <li class="list-group-item">
            <span class="badge" style="background-color: @(Model.LW>0 ? "green" : "red")"><span class="@(Model.LW>0 ? "glyphicon glyphicon-ok" : "glyphicon glyphicon-remove")" style="font-size: 16px;"></span></span>
            Living Will
            </li>
            <li class="list-group-item">
            <span class="badge" style="background-color: @(Model.Will>0 ? "green" : "red")"><span  class="@(Model.Will>0 ? "glyphicon glyphicon-ok" : "glyphicon glyphicon-remove")" style="font-size: 16px;"></span></span>
            Will
            </li>
            <li class="list-group-item">
              <span class="badge" style="background-color: @(Model.Hippa>0 ? "green" : "red")"><span class="@(Model.Hippa>0 ? "glyphicon glyphicon-ok" : "glyphicon glyphicon-remove")" style="font-size: 16px;"></span></span>
              HIPPA
            </li>
            <li class="list-group-item">
            <span class="badge" style="background-color: @(Model.DC>0 ? "green" : "red")"><span class="@(Model.DC>0 ? "glyphicon glyphicon-ok" : "glyphicon glyphicon-remove")" style="font-size: 16px;"></span></span>
              Death Certificate
            </li>
        </ul>
    </div>
</div>    
</div>
<div class="row">
    <div class="col-md-11">
        @if(!Context.User.Identity.IsAuthenticated)
    {
        <a class="btn btn-primary" role="button" href="~/Home/CreateUser">Next
        </a>
           
    }
         <input type="button" value="Print" class="btn btn-primary" style="margin-right:5px;" onclick="javascript: printDiv('printablediv')" />
    </div>
</div>
@section scripts
{
    <script type="text/javascript">
        function printDiv(divID) {
            
            var divElements = document.getElementById(divID).innerHTML;
            var oldPage = document.body.innerHTML;
            document.body.innerHTML =
              "<html><head><title></title></head><body>" +
              divElements + "</body>";
            window.print();
            document.body.innerHTML = oldPage;


        }
    </script>
}