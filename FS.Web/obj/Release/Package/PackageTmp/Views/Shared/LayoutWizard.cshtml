<body style="background: url('/images/highway.jpg') no-repeat #272727; background-position: center center; background-size: cover;">
    <div class="logo">
        <img src="~/images/index-logo.png" class="img-responsive" width="200" />
    </div>

    <div id="cssmenu" style="position: absolute; right: 0; z-index:9999;">
        <ul >
            <li>
                <a href="~/Home/Index">Home</a>
            </li>
            <li>
                <a href="~/Home/About">What Owls Do</a>
            </li>
           
            <li>
                @if (HttpContext.Current.User.Identity.IsAuthenticated)
                {
                    <a href="~/Account/LogOff">Logout</a> 
                }else
                {
                        <a href="~/Account/LoginView">Login</a>
                }
            </li>
                    <li>
                @if (HttpContext.Current.User.Identity.IsAuthenticated)
                {
                    <a href="~/Account/RegisterSummary">Summary</a> 
                }
            </li>
             <li>
                <a href="~/Home/Contact">Contact Us</a>
            </li>
        </ul>
    </div>

    <div class="image-container set-full-height" >

        <div class="image-container set-full-height" style="background-color: rgba(255, 255, 255, 0);">
            <!--   Big container   -->


            <div class="container" style="position: relative; padding-top: 10px;  max-width:1032px">
                <div class="row">
                    <div class="col-md-12 text-center" style="margin-top: 10px;">
                        <div class="wizard-container">
                            <div class="card wizard-card ct-wizard-orange">
                                @RenderBody()
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!--  big container -->


            <div class="footer" style="margin-top:0;padding-top:0">
                <div class="container text-center">
                    <p style="width:450px; height:35px; color:white; border-radius:0px 0px 10px 10px; background-color:black; opacity:0.6; margin:auto; padding-top:5px; text-align:center;">All rights reserved to SageOwls 2010-2014</p>
                </div>
            </div>


        </div>


    </div>



</body>
