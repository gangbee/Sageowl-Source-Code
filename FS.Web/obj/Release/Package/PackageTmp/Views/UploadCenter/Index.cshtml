@{
    ViewBag.Title = "Upload Center";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model FS.Web.Models.DocumentModel
<h2>Select Files</h2>

<form method="post" action="SelectFiles" enctype="multipart/form-data">
    <div class="row">
        
        <div class="col-md-6">
            @foreach (var item in Model.DocumentTypes) {
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" name="FileName" id="@item.DataValue" value="@item.DataValue"> @item.DataText
                    </label>
                </div>
            </div>
            }
        </div>
    </div>
      <div class="row">
        <div class="col-md-12">
            <div class="alert alert-info">
          <p class="bg-info"> If you do not have these documents, see links for resources</p>
                </div>
            </div>
          </div>
      <div class="row">
        <div class="col-md-6">
             <input type="submit" class="btn btn-primary pull-right" value="Next"  />
            </div>
          </div>
    
</form>
